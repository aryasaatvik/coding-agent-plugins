{
  "name": "coding-agent-plugins",
  "version": "1.0.0",
  "description": "Collection of plugins for Claude Code and OpenCode",
  "author": "Saatvik Arya",
  "license": "MIT",
  "keywords": [
    "claude-code",
    "opencode",
    "plugins",
    "development-tools",
    "ni",
    "package-manager"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aryasaatvik/coding-agent-plugins"
  },
  "scripts": {
    "install-plugins": "bun install.ts",
