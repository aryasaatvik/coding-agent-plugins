    "generate": "turbo gen",
    "clean": "turbo run clean && rm -rf .turbo"
  },
  "devDependencies": {
    "@turbo/gen": "^2.6.1",
    "@types/bun": "latest",
    "turbo": "^2.6.1"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.2",
  "type": "module",
  "private": true,
  "workspaces": [
    "plugins/*"
  ]
